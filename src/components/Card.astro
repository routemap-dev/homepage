---
export interface Props {
  title: string;
  link?: string;
}

const { link, title } = Astro.props;
---

{
  !!link ? (
    <a class="card has-link" href={link}>
      <h2>
        {title}
      </h2>
      <div>
        <slot />
      </div>
    </a>
  ) : (
    <div class="card">
      <h2>
        {title}
      </h2>
      <div>
        <slot />
      </div>
    </div>
  )
}


<style lang="scss">
  .card {
    display: block;
    max-width: 400px;
    padding: 2rem;
    border-radius: 0.5rem;
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    color: var(--background);
    background-color: var(--foreground);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
    
    &.has-link {
      cursor: pointer;

      &:is(:hover, :focus-within) h2 {
        color: var(--accent);
      }
    }

    h2 {
      margin: 0;
      font-size: 1.25rem;
      transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    div {
      margin-top: 0.5rem;
      margin-bottom: 0;
    }
  }
</style>
